<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/innerConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/padding_8"
                android:src="@drawable/ic_cancel_black"
                app:layout_constraintBottom_toBottomOf="@id/tvTitle"
                app:layout_constraintStart_toStartOf="@id/tvTitle"
                app:layout_constraintTop_toTopOf="@id/tvTitle" />

            <TextView
                android:id="@+id/tvTitle"
                style="@style/Font.Book.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="@string/select_country"
                android:textAllCaps="true"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/viewElevation"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="70dp"
                android:background="@drawable/shape_drop_down_shadow" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilSearch"
                style="@style/Font.Book.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                app:layout_constraintTop_toBottomOf="@+id/viewElevation"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:gravity="bottom"
                android:hint="@string/search"
                android:textColorHint="@color/black"
                android:paddingStart="@dimen/dimen_16dp"
                android:paddingEnd="@dimen/dimen_16dp"
                android:theme="@style/AppTheme">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSearch"
                    style="@style/Font.Book.Large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:maxLines="1"
                    android:paddingStart="@dimen/padding_8"
                    android:paddingEnd="40dp"
                    android:paddingBottom="@dimen/padding_8"
                    android:paddingLeft="@dimen/match_constraint"
                    android:paddingRight="40dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:paddingTop="@dimen/dimen_16dp"
                android:paddingEnd="@dimen/dimen_4dp"
                android:paddingBottom="@dimen/padding_8"
                android:src="@drawable/ic_baseline_search_24"
                android:layout_marginEnd="@dimen/dimen_16dp"
                app:layout_constraintBottom_toBottomOf="@+id/tilSearch"
                app:layout_constraintEnd_toEndOf="@+id/tilSearch"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:paddingRight="@dimen/dimen_4dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCountry"
                android:layout_width="match_parent"
                android:layout_height="@dimen/match_constraint"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="5"
                android:layout_marginTop="@dimen/dimen_8dp"
                tools:listitem="@layout/list_item_country_code"
                app:layout_constraintTop_toBottomOf="@id/ivSearch"
                android:paddingStart="@dimen/dimen_16dp"
                android:paddingEnd="@dimen/dimen_16dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>