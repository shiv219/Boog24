<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <variable
            name="activity"
            type="com.boog24.activity.SignupActivity" />
        <variable
            name="userid"
            type="String" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/splash"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="@dimen/dimen_250dp"
                android:layout_height="@dimen/dimen_100dp"
                android:layout_marginTop="@dimen/dimen_50dp"
                android:src="@drawable/logo"
                android:adjustViewBounds="true"/>

            <com.google.android.material.textfield.TextInputLayout
                android:textColorHint="@color/black"
                android:paddingTop="@dimen/dimen_10dp"
                app:hintTextAppearance="@style/TextInputLayoutHintText"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:alpha="0.8"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_below="@id/tvLogin"
                    android:id="@+id/etFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/first_name"
                    android:textColorHint="@color/black"
                    android:paddingBottom="@dimen/dimen_14dp"
                    android:alpha="0.8"
                    android:textSize="@dimen/dimen_15sp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/proximanova_regular" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:textColorHint="@color/black"
                android:paddingTop="@dimen/dimen_10dp"
                app:hintTextAppearance="@style/TextInputLayoutHintText"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:alpha="0.8"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_below="@id/tvLogin"
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/last_name"
                    android:alpha="0.8"
                    android:textColorHint="@color/black"
                    android:paddingBottom="@dimen/dimen_14dp"
                    android:textSize="@dimen/dimen_15sp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/proximanova_regular" />

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:textColorHint="@color/black"
                android:paddingTop="@dimen/dimen_10dp"
                app:hintTextAppearance="@style/TextInputLayoutHintText"
                android:layout_width="match_parent"
                android:alpha="0.8"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_below="@id/tvLogin"
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email_addressstar"
                    android:alpha="0.8"
                    android:textColorHint="@color/black"
                    android:paddingBottom="@dimen/dimen_14dp"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/dimen_15sp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/proximanova_regular" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCountry"
                    android:textColorHint="@color/black"
                    android:paddingTop="@dimen/dimen_10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tilPhone"
                    app:hintTextAppearance="@style/TextInputLayoutHintText"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    app:layout_constraintHorizontal_weight="0.3"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCountry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/country"
                        android:textColorHint="@color/black"
                        android:paddingBottom="@dimen/dimen_14dp"
                        android:inputType="phone"
                        android:textSize="@dimen/dimen_15sp"
                        android:textColor="@color/black"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:backgroundTint="@color/black"
                        android:fontFamily="@font/proximanova_regular" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPhone"
                    android:textColorHint="@color/black"
                    android:paddingTop="@dimen/dimen_10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:hintTextAppearance="@style/TextInputLayoutHintText"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    app:layout_constraintHorizontal_weight="0.7"
                    app:layout_constraintStart_toEndOf="@+id/tilCountry"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone_number_asstrik"
                        android:textColorHint="@color/black"
                        android:paddingBottom="@dimen/dimen_14dp"
                        android:inputType="phone"
                        android:textSize="@dimen/dimen_15sp"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/black"
                        android:fontFamily="@font/proximanova_regular" />

                </com.google.android.material.textfield.TextInputLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!--
                        <com.google.android.material.textfield.TextInputLayout
                            android:textColorHint="@color/black"
                            android:paddingTop="@dimen/dimen_10dp"
                            app:hintTextAppearance="@style/TextInputLayoutHintText"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/dimen_20dp"
                            android:alpha="0.8"
