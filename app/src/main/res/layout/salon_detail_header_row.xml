<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:id="@+id/lyt"
    android:background="@drawable/rounded_bg_gray9c"
    android:backgroundTint="#F2F2F2"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_15dp">

        <RelativeLayout
            android:id="@+id/lll"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_arrow_up"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="@dimen/dimen_16dp"
                android:src="@drawable/arrow_up_black" />

            <ImageView
                android:id="@+id/img_arrow_down"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="@dimen/dimen_16dp"
                android:src="@drawable/arrow_down_black" />

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/lll"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:text="Hair Cutting"
            android:textSize="@dimen/dimen_16sp"
            android:fontFamily="@font/proxima_nova_bold"
            android:textColor="@color/blackish" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/lytFooter"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:padding="@dimen/dimen_8dp"
        android:layout_height="wrap_content">





        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/lll"
            android:layout_marginRight="7dp"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:text="Waxing The second session be grounded"
            android:textSize="@dimen/dimen_16sp"
            android:fontFamily="@font/proxima_nova_bold"
            android:textColor="@color/blackish" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_12dp"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:text="80 minutes"
                android:layout_gravity="center"
                android:textSize="@dimen/dimen_16sp"
                android:fontFamily="@font/proxima_nova_bold"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="12dp"
                android:text="â‚¬ 90"
                android:textSize="@dimen/dimen_16sp"
                android:fontFamily="@font/proxima_nova_bold"
                android:textColor="@color/blackish" />


            <Button
                android:id="@+id/btnAddAlbum"
                android:textAllCaps="false"
                style="?android:attr/borderlessButtonStyle"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_40dp"
                android:textColor="@color/colorPrimary"
                android:text="Select"
                android:paddingRight="@dimen/dimen_50dp"
                android:paddingLeft="@dimen/dimen_50dp"
                android:background="@drawable/circle_red_ripple"/>


        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_6dp"
        android:background="@color/white"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:scrollbarStyle="insideInset"
        />



</LinearLayout>