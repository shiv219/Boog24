<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/dimen_12dp"
    android:layout_marginTop="1dp"
    android:background="@drawable/rounded_bg_gray9c"
    android:backgroundTint="#F2F2F2"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/lll"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:text="Waxing The second session be grounded"
        android:textSize="@dimen/dimen_16sp"
        android:fontFamily="@font/proxima_nova_bold"
        android:textColor="@color/blackish" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginRight="@dimen/dimen_8dp"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="1 hour 80 minutes"
            android:layout_gravity="center"
            android:textSize="@dimen/dimen_14sp"
            android:fontFamily="@font/proxima_nova_bold"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:text="â‚¬"
            android:maxLength="10"
            android:textSize="@dimen/dimen_14sp"
            android:fontFamily="@font/proxima_nova_bold"
            android:textColor="@color/blackish" />


        <Button
            android:id="@+id/btnSelect"
            android:textAllCaps="false"
            style="?android:attr/borderlessButtonStyle"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_weight="1.2"
            android:layout_height="@dimen/dimen_40dp"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:text="@string/select"
            android:paddingRight="@dimen/dimen_8dp"
            android:paddingLeft="@dimen/dimen_8dp"
            android:background="@drawable/circle_red_ripple"/>


    </LinearLayout>

</LinearLayout>