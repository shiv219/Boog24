<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="country"
            type="com.boog24.util.countryCode.Country" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@{country.isSelected?@color/gray:@color/white}"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingEnd="@dimen/dimen_16dp">

        <TextView
            android:id="@+id/tvCountryName"
            style="@style/Font.Book.Medium"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8"
            android:text="@{country.countryName}"
            app:layout_constraintEnd_toStartOf="@id/tvCountryCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Country Name" />

        <TextView
            android:id="@+id/tvCountryCode"
            style="@style/Font.Book.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8"
            android:text="@{country.countryCode}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="+123" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/tvCountryName" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>