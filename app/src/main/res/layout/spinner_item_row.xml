<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:vFont="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ctvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="test"
        android:paddingRight="@dimen/dimen_8dp"
        android:paddingLeft="@dimen/dimen_8dp"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_14dp"
        android:fontFamily="@font/proxima_nova_alt_bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_c9"
        android:layout_below="@id/ctvTitle"
        android:layout_marginTop="@dimen/dimen_0dp"
        android:layout_marginBottom="@dimen/dimen_0dp"/>

</LinearLayout>